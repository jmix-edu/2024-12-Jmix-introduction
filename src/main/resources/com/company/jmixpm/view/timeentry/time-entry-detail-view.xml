<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://timeEntryDetailView.title"
      focusComponent="form">
    <data>
        <instance id="timeEntryDc"
                  class="com.company.jmixpm.entity.TimeEntry">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_instance_name"/>
                <property name="task" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="timeEntryDl"/>
        </instance>
        <collection id="tasksDc" class="com.company.jmixpm.entity.Task">
            <fetchPlan extends="_instance_name"/>
            <loader id="tasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from pm_Task e]]>
                </query>
            </loader>
        </collection>

    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="timeEntryDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityComboBox id="taskField" property="task" itemsContainer="tasksDc">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityComboBox>
            <textField id="timeSpentField" property="timeSpent"/>
            <dateTimePicker id="entryDateField" property="entryDate"/>
            <entityPicker id="userField" property="user">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textArea id="descriptionField" height="9.5em" property="description"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
