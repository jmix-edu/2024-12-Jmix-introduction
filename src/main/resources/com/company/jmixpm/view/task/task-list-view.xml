<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://taskListView.title"
      focusComponent="tasksDataGrid">
    <data>
        <collection id="tasksDc"
                    class="com.company.jmixpm.entity.Task">
            <fetchPlan extends="_base">
                <property name="project" fetchPlan="_base"/>
                <property name="assignee" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="tasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from pm_Task e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="false">
            <refresh loader="tasksDl">
                <onViewEvent type="Init"/>
            </refresh>
        </dataLoadCoordinator>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="tasksDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="tasksDataGrid.create"/>
            <button id="editButton" action="tasksDataGrid.edit"/>
            <button id="removeButton" action="tasksDataGrid.remove"/>
            <button id="importBtn" text="msg://importBtn.text" icon="FILE_ADD"/>
            <fileStorageUploadField id="uploadTasksFromFileBtn"
                                    uploadIcon="UPLOAD"
                                    uploadText="msg://uploadTasksFromFileBtn.uploadText"
                                    fileStoragePutMode="MANUAL"/>
            <simplePagination id="pagination" dataLoader="tasksDl" itemsPerPageDefaultValue="10"
                              itemsPerPageVisible="true"/>
        </hbox>
        <dataGrid id="tasksDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="tasksDc"
                  columnReorderingAllowed="true" selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="dueDate"/>
                <column property="assignee"/>
                <column property="project"/>
                <column property="priority"/>
                <column property="estimatedEfforts"/>
                <column property="status"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
