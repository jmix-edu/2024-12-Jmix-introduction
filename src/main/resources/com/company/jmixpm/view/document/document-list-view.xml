<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://documentListView.title"
      focusComponent="documentsDataGrid">
    <data>
        <collection id="documentsDc"
                    class="com.company.jmixpm.entity.Document">
            <fetchPlan extends="_base">
                <property name="project" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="documentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from pm_Document e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <propertyFilter id="notesFilter"
                        property="notes"
                        operation="CONTAINS"
                        dataLoader="documentsDl"
                        labelVisible="false"
        width="100%" maxWidth="30em">
            <textField id="notesFilterField"
                       placeholder="Type something..."
                       clearButtonVisible="true">
                <prefix>
                    <icon icon="SEARCH"/>
                </prefix>
            </textField>
        </propertyFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="documentsDataGrid.create"/>
            <button id="editButton" action="documentsDataGrid.edit"/>
            <button id="removeButton" action="documentsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="documentsDl"/>
        </hbox>
        <dataGrid id="documentsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="documentsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="project"/>
                <column property="project.manager"/>
                <column property="file"/>
                <column property="notes"/>
                <column property="createdBy"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
