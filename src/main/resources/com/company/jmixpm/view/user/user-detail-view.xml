<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://UserDetailView.title"
      focusComponent="form">
    <data>
        <instance id="userDc"
                  class="com.company.jmixpm.entity.User">
            <fetchPlan extends="_base">
                <property name="projects" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="projectsDc" property="projects"/>
        </instance>
    </data>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox>
            <formLayout id="form" dataContainer="userDc">
                <textField id="usernameField" property="username" readOnly="true"/>
                <passwordField id="passwordField"
                               label="msg://com.company.jmixpm.entity/User.password"
                               required="true"
                               visible="false" themeNames=""/>
                <passwordField id="confirmPasswordField"
                               label="msg://confirmPassword"
                               required="true"
                               visible="false"/>
                <textField id="firstNameField" property="firstName"/>
                <textField id="lastNameField" property="lastName"/>
                <textField id="emailField" property="email"/>
                <comboBox id="timeZoneField" property="timeZoneId" clearButtonVisible="true"/>
                <checkbox id="activeField" property="active"/>
                <fileUploadField id="avatarField" property="avatar" fileNameVisible="true" clearButtonVisible="true"
                                 uploadIcon="UPLOAD"/>
            </formLayout>
            <image id="avatarImg"
                   width="16em"
                   height="16em"
                   dataContainer="userDc"
                   property="avatar"
                   themeNames="contain"/>
        </hbox>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="projectsDataGrid.add"/>
            <button action="projectsDataGrid.exclude"/>
        </hbox>
        <dataGrid id="projectsDataGrid" dataContainer="projectsDc" width="100%" height="100%">
            <actions>
                <action id="add" type="list_add"/>
                <action id="exclude" type="list_exclude"/>
            </actions>
            <columns>
                <column property="name"/>
                <column property="description"/>
                <column property="status"/>
                <column property="defaultProject"/>
                <column property="defaultTaskPriority"/>
                <column property="projectLabels"/>
                <column property="deletedBy"/>
                <column property="deletedDate"/>
                <column property="totalEstimatedEfforts"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
