<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://projectDetailView.title"
      focusComponent="form">
    <data>
        <instance id="projectDc"
                  class="com.company.jmixpm.entity.Project">
            <fetchPlan extends="_base">
                <property name="manager" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="projectDl"/>
        </instance>
        <collection id="participantsDc" class="com.company.jmixpm.entity.User">
            <loader id="participantsDl" readOnly="true">
                <query>
                    <![CDATA[select e from pm_User e where e.id in
                        (select u.id from pm_User u
                        inner join u.projects pul
                        where pul =  :project)]]>
                </query>
            </loader>
            <fetchPlan extends="_base">
                <property name="projects" fetchPlan="_base"/>
            </fetchPlan>
        </collection>
        <collection id="tasksDc" class="com.company.jmixpm.entity.Task">
            <loader id="tasksDl" readOnly="true">
                <query>
                    <![CDATA[select e from pm_Task e where e.project = :project]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="false">
            <refresh loader="projectDl">
                <onViewEvent type="BeforeShow"/>
            </refresh>
        </dataLoadCoordinator>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="saveAction" type="detail_save"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <tabSheet id="tabSheet" width="100%">
            <tab id="formTab" label="msg://com.company.jmixpm.entity/Project">
                <formLayout id="form" dataContainer="projectDc">
                    <responsiveSteps>
                        <responsiveStep minWidth="0" columns="1"/>
                        <responsiveStep minWidth="40em" columns="2"/>
                    </responsiveSteps>
                    <textField id="nameField" property="name"/>
                    <textArea id="descriptionField" height="9.5em" property="description"/>
                    <select id="statusField" property="status"/>
                    <checkbox id="defaultProjectField" property="defaultProject"/>
                    <select id="defaultTaskPriorityField" property="defaultTaskPriority"/>
                    <entityPicker id="managerField" property="manager">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <textField id="projectLabelsField" property="projectLabels" readOnly="true"/>
                </formLayout>
            </tab>
            <tab id="participantsTab" label="msg://com.company.jmixpm.entity/Project.participants" lazy="true">
                <vbox id="participantsWrapper" width="100%">
                    <hbox id="participantsButtonsPanel" classNames="buttons-panel">
                        <button action="participantsDataGrid.add"/>
                        <button action="participantsDataGrid.exclude"/>
                        <button action="participantsDataGrid.create"/>
                        <simplePagination id="participantsPagination" dataLoader="participantsDl" itemsPerPageDefaultValue="10" itemsPerPageVisible="true"/>
                    </hbox>
                    <dataGrid id="participantsDataGrid" dataContainer="participantsDc" width="100%" minHeight="30em">
                        <actions>
                            <action id="add" type="list_add"/>
                            <action id="exclude" type="list_exclude"/>
                            <action id="create" type="list_create">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                        </actions>
                        <columns>
                            <column property="username"/>
                            <column property="firstName"/>
                            <column property="lastName"/>
                            <column property="email"/>
                        </columns>
                    </dataGrid>
                </vbox>
            </tab>
            <tab id="tasksTab" label="msg://com.company.jmixpm.entity/Project.tasks" lazy="true">
                <vbox id="tasksWrapper" width="100%">
                    <hbox id="tasksButtonsPanel" classNames="buttons-panel">
                        <button action="tasksDataGrid.create"/>
                        <button action="tasksDataGrid.edit"/>
                        <button action="tasksDataGrid.remove"/>
                        <simplePagination dataLoader="tasksDl"/>
                    </hbox>
                    <dataGrid id="tasksDataGrid" dataContainer="tasksDc" width="100%" minHeight="30em">
                        <actions>
                            <action id="create" type="list_create">
                                <!--                        <properties>-->
                                <!--                            <property name="openMode" value="DIALOG"/>-->
                                <!--                        </properties>-->
                            </action>
                            <action id="edit" type="list_edit">
                                <!--                        <properties>-->
                                <!--                            <property name="openMode" value="DIALOG"/>-->
                                <!--                        </properties>-->
                            </action>
                            <action id="remove" type="list_remove"/>
                        </actions>
                        <columns>
                            <column property="name"/>
                            <column property="dueDate"/>
                            <column property="priority"/>
                            <column property="estimatedEfforts"/>
                        </columns>
                    </dataGrid>
                </vbox>

            </tab>
        </tabSheet>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="saveActionButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
