<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://myTimeEntryListView.title">
    <data>
        <collection id="timeEntriesDc" class="com.company.jmixpm.entity.TimeEntry">
            <fetchPlan extends="_base">
                <property name="task" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="timeEntriesDl" readOnly="true">
                <query>
                    select e from pm_TimeEntry e
                    where e.user.username = :current_user_username
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFiler"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
<!--        <timer id="timer" delay="1000" autostart="true" repeating="true"/>-->
        <settings auto="true"/>
    </facets>
    <layout>
        <genericFilter id="genericFiler"
                       dataLoader="timeEntriesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="timeEntriesDataGrid.create"/>
            <button id="editButton" action="timeEntriesDataGrid.edit"/>
            <button id="removeButton" action="timeEntriesDataGrid.remove"/>
            <button id="copyBtn" action="timeEntriesDataGrid.copy"/>
            <simplePagination id="pagination" dataLoader="timeEntriesDl"/>
        </hbox>
        <dataGrid id="timeEntriesDataGrid"
                  dataContainer="timeEntriesDc"
                  minWidth="30em"
                  width="100%"
                  columnReorderingAllowed="true"
                  minHeight="20em">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
                <action id="copy" text="msg://copy.actionText" icon="COPY" type="list_itemTracking"/>
            </actions>
            <columns resizable="true">
                <column property="entryDate" autoWidth="true" flexGrow="0"/>
                <column property="task"/>
                <column property="timeSpent" autoWidth="true" flexGrow="0"/>
                <column property="status" autoWidth="true" flexGrow="0"/>
                <column property="description" flexGrow="2"/>
                <column property="rejectionReason" flexGrow="2"/>
            </columns>
        </dataGrid>
    </layout>
</view>